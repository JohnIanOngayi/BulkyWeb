@model List<Category>
<h1>Category List</h1>
<table class="table table-bordered table-striped">
        <thead>
                <tr>
                        <th>
                                Category Name
                        </th>
                        <th>
                                Display Order
                        </th>
                </tr>
        </thead>
        <tbody>
                @foreach(var Item in Model.OrderBy(Item => Item.DisplayOrder))
                {
                        <tr>
                                <td>@Item.Name</td>
                                <td>@Item.DisplayOrder</td>
                        </tr>
                }
        </tbody>
</table>
